<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/saveIB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:onClick="onClick"
        app:srcCompat="@drawable/save" />

    <ImageButton
        android:id="@+id/colorIB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/brushIB"
        android:onClick="onClick"
        app:srcCompat="@drawable/colors" />

    <ImageButton
        android:id="@+id/rectangleIB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/eraserIB"
        android:onClick="onClick"
        app:srcCompat="@drawable/rectangle" />

    <ImageButton
        android:id="@+id/lineIB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:onClick="onClick"
        app:srcCompat="@drawable/line" />

    <com.csci4020.team7_paint.drawing
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/eraserIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lineIB"
        android:layout_alignTop="@+id/lineIB"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/lineIB"
        android:onClick="onClick"
        app:srcCompat="@drawable/eraser" />

    <ImageButton
        android:id="@+id/brushIB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/rectangleIB"
        android:onClick="onClick"
        app:srcCompat="@drawable/brush" />

</RelativeLayout>